<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginVertical="8dp"
    android:backgroundTint="#fff"
    android:layout_margin="6dp"
    app:cardCornerRadius="13dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="32.5dp"
            android:layout_height="32.5dp"

            android:layout_margin="6.5dp"
            android:padding="5dp"
            android:id="@+id/share"
            android:layout_alignParentEnd="true"
            android:src="@drawable/share"
            app:tint="@color/colorPrimary"

            />

        <ImageView
            android:id="@+id/im"
            android:layout_width="26dp"
            android:layout_height="65dp"
            android:layout_marginStart="6.5dp"
            android:layout_marginTop="6.5dp"
            android:layout_marginEnd="6.5dp"
            android:layout_marginBottom="6.5dp"
            android:background="@color/my_primarycolor"
            android:padding="6.5dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:layout_toEndOf="@+id/im"
            android:paddingBottom="12dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/note_title_text_view"
                android:text="Title"
                android:singleLine="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/note_timestamp_text_view"
                android:text="Date: 12-12-2023"
                android:textSize="12sp"
                android:gravity="start"
                android:layout_marginVertical="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sharetv"
                android:text="Share it with someone"
                android:textSize="15.60dp"
                android:textStyle="bold"
                android:textColor="@color/my_primarycolor"
                android:gravity="start"
                android:layout_marginVertical="4dp"/>
        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>

